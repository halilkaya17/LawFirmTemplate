
@{
    ViewData["Title"] = "Detail";
    Layout = "~/Areas/Admin/Views/Shared/AdminLayout.cshtml";
}

<div class="content-wrapper">
    <!-- Content -->

    <div class="container-xxl flex-grow-1 container-p-y">
        <h4 class="fw-bold py-3 mb-4">Faaliyet Alanı</h4>
        <div class="row">
            <div class="col-md-12">
                <div class="card mb-4">
                    <h5 class="card-header">Faaliyet Alanı</h5>
                    <div class="card-body">
                        <div class="mb-3">
                            <label for="exampleFormControlTextarea1" class="form-label">Başlık</label>
                            <textarea class="form-control" id="exampleFormControlTextarea1" rows="1"></textarea>
                        </div>
                        <div class="mb-3">
                            <div>
                                <label for="exampleFormControlTextarea1" class="form-label">Açıklama</label>
                                <textarea class="form-control" id="exampleFormControlTextarea1" rows="10"></textarea>
                            </div>
                        </div>
                        <div class="col-6 mb-3">
                            <label for="formFile" class="form-label">Fotoğraf Ekleyin</label>
                            <input class="form-control" type="file" id="formFile" />
                        </div>
                        <div class="mb-3">
                            <button type="button" class="btn btn-lg btn-primary mt-5 ">Değişikleri Kaydet</button>
                            <button type="button" class="btn btn-lg btn-danger mt-5 mx-2 ">Sil</button>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


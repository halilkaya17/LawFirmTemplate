@using LawFirmTemplate.Models;
@model OurTeam;
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Add";
    Layout = "~/Areas/Admin/Views/Shared/AdminLayout.cshtml";
}

<div class="content-wrapper">   
    <div class="container-xxl flex-grow-1 container-p-y">
        <h4 class="fw-bold py-3 mb-4">Ekip Üyesi Ekle</h4>
        <div class="row">
            <div class="col-md-12">
                <div class="card mb-4">
                    <h5 class="card-header">Ekip Üyesi</h5>
                    <div class="card-body">
                        <form method="post" enctype="multipart/form-data">
                            <div class="mb-3">
                                <label asp-for="FullName" class="form-label">Ad Soyad</label>
                                <textarea class="form-control" asp-for="FullName" rows="1"></textarea>
                            </div>
                            <div class="mb-3">
                                <label asp-for="Title" class="form-label">Ünvan</label>
                                <textarea class="form-control" asp-for="Title" rows="1"></textarea>
                            </div>
                            <div class="mb-3">
                                <label for="Image" class="form-label">Resim</label>
                                <div class="d-flex align-items-start align-items-sm-center gap-4">
                                    <img src="~/img/bg-corporate-20-1.jpg" alt="user-avatar" class="d-block rounded" height="300" width="300">
                                    <div class="button-wrapper">
                                        <label for="Image" class="btn btn-primary me-2 mb-4" tabindex="0">
                                            <span class="d-none d-sm-block">Resim Ekle</span>
                                            <i class="bx bx-upload d-block d-sm-none"></i>
                                            <input type="file" id="Image" name="Image" class="account-file-input" hidden="" accept="image/png, image/jpeg">
                                        </label>
                                        <p class="text-muted mb-0">Allowed JPG, GIF or PNG. Max size of 800K</p>
                                    </div>
                                </div>
                            </div>
                            <div class="mb-3">
                                <div>
                                    <label asp-for="PreDescription" class="form-label">Ön Açıklama</label>
                                    <textarea class="form-control" asp-for="PreDescription" rows="2"></textarea>
                                </div>
                            </div>
                            <div class="mb-3">
                                <div>
                                    <label asp-for="Description" class="form-label">Açıklama</label>
                                    <textarea class="form-control" asp-for="Description" rows="5"></textarea>
                                </div>
                            </div>
                            <div class="mb-3">
                                <div>
                                    <label asp-for="FacebookUrl" class="form-label">Facebook Url</label>
                                    <textarea class="form-control" asp-for="FacebookUrl" rows="1"></textarea>
                                </div>
                            </div> 
                            <div class="mb-3">
                                <div>
                                    <label asp-for="TwitterUrl" class="form-label">Twitter Url</label>
                                    <textarea class="form-control" asp-for="TwitterUrl" tarea1" rows="1"></textarea>
                                </div>
                            </div>
                            <div class="mb-3">
                                <div>
                                    <label asp-for="LinkedinUrl" class="form-label">Linkedin Url</label>
                                    <textarea class="form-control" asp-for="LinkedinUrl" rows="1"></textarea>
                                </div>
                            </div>
                            <div class="mb-3">
                                <button type="submit" class="btn btn-lg btn-primary mt-5 ">Ekle</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


@using LawFirmTemplate.Models
@model ContactUs;
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "ContactSettings";
    Layout = "~/Areas/Admin/Views/Shared/AdminLayout.cshtml";
}

<div class="content-wrapper">
    <div class="container-xxl flex-grow-1 container-p-y">
        <h4 class="fw-bold py-3 mb-4">İletişim Ayarları</h4>
        <div class="row">
            <div class="col-12">
                <div class="card mb-4">
                    <div class="card-header d-flex align-items-center justify-content-between">
                        <h5 class="mb-0">İletişim</h5>
                    </div>
                    <div class="card-body">
                        <form method="post">
                            <div class="row mb-3">
                                <label class="col-sm-2 col-form-label" asp-for="Id">İletişim Id</label>
                                <div class="col-sm-10">
                                    <input type="text" class="form-control" asp-for="Id" readonly>
                                </div>
                                <span asp-validation-for="Id" class="text-danger"></span>
                            </div>
                            <div class="row mb-3">
                                <label class="col-sm-2 col-form-label" asp-for="Adress">Adres</label>
                                <div class="col-sm-10">
                                    <input type="text" class="form-control" asp-for="Adress">
                                </div>
                                <span asp-validation-for="Adress" class="text-danger"></span>
                            </div>
                            <div class="row mb-3">
                                <label class="col-sm-2 col-form-label" asp-for="Phone">Telefon</label>
                                <div class="col-sm-10">
                                    <input type="text" asp-for="Phone" class="form-control phone-mask" aria-describedby="basic-default-phone">
                                </div>
                                <span asp-validation-for="Phone" class="text-danger"></span>
                            </div>
                            <div class="row mb-3">
                                <label class="col-sm-2 col-form-label" asp-for="Email">Email</label>
                                <div class="col-sm-10">
                                    <div class="input-group input-group-merge">
                                        <input type="text" asp-for="Email" class="form-control" aria-describedby="basic-default-email2">
                                    </div>
                                    <span asp-validation-for="Email" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="row mb-3">
                                <label class="col-sm-2 col-form-label" asp-for="Weekend">Pazartesi-Cuma</label>
                                <div class="col-sm-10">
                                    <input type="text" class="form-control" asp-for="Weekend">
                                </div>
                                <span asp-validation-for="Weekend" class="text-danger"></span>
                            </div>
                            <div class="row mb-3">
                                <label class="col-sm-2 col-form-label" asp-for="Saturday">Cumartesi</label>
                                <div class="col-sm-10">
                                    <input type="text" class="form-control" asp-for="Saturday">
                                </div>
                                <span asp-validation-for="Saturday" class="text-danger"></span>
                            </div>
                            <div class="row mb-3">
                                <label class="col-sm-2 col-form-label" asp-for="Sunday">Pazar</label>
                                <div class="col-sm-10">
                                    <input type="text" class="form-control" asp-for="Sunday">
                                </div>
                                <span asp-validation-for="Sunday" class="text-danger"></span>
                            </div>
                            <div class="row mb-3">
                                <label class="col-sm-2 col-form-label" asp-for="MapKey">Google MapKey</label>
                                <div class="col-sm-10">
                                    <textarea asp-for="MapKey" class="form-control" aria-describedby="basic-icon-default-message2"></textarea>
                                </div>
                                <span asp-validation-for="MapKey" class="text-danger"></span>
                            </div>
                            <div class="row mb-3">
                                <label class="col-sm-2 col-form-label" asp-for="Title">Başlık</label>
                                <div class="col-sm-10">
                                    <input type="text" class="form-control" asp-for="Title">
                                </div>
                                <span asp-validation-for="Title" class="text-danger"></span>
                            </div>
                            <div class="row mb-3">
                                <label class="col-sm-2 col-form-label" asp-for="Description">Açıklama</label>
                                <div class="col-sm-10">
                                    <textarea asp-for="Description" class="form-control" aria-describedby="basic-icon-default-message2"></textarea>
                                </div>
                                <span asp-validation-for="Description" class="text-danger"></span>
                            </div>
                            <div class="row mb-3">
                                <label class="col-sm-2 col-form-label" asp-for="FacebookUrl">Facebook Url</label>
                                <div class="col-sm-10">
                                    <textarea asp-for="FacebookUrl" class="form-control" aria-describedby="basic-icon-default-message2"></textarea>
                                </div>
                                <span asp-validation-for="FacebookUrl" class="text-danger"></span>
                            </div>
                            <div class="row mb-3">
                                <label class="col-sm-2 col-form-label" asp-for="TwitterUrl">Twitter Url</label>
                                <div class="col-sm-10">
                                    <textarea asp-for="TwitterUrl" class="form-control" aria-describedby="basic-icon-default-message2"></textarea>
                                </div>
                                <span asp-validation-for="TwitterUrl" class="text-danger"></span>
                            </div>
                            <div class="row mb-3">
                                <label class="col-sm-2 col-form-label" asp-for="LinkedinUrl">Linkedin Url</label>
                                <div class="col-sm-10">
                                    <textarea asp-for="LinkedinUrl" class="form-control" aria-describedby="basic-icon-default-message2"></textarea>
                                </div>
                                <span asp-validation-for="LinkedinUrl" class="text-danger"></span>
                            </div>
                            <div class="row justify-content-end">
                                <div class="col-sm-10">
                                    <button type="submit" class="btn btn-primary">Kaydet</button>
                                </div>
                            </div>
                            <div asp-validation-summary="All" class="text-danger"></div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@using LawFirmTemplate.Models;
@model GeneralSetting;
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "GeneralSettings";
    Layout = "~/Areas/Admin/Views/Shared/AdminLayout.cshtml";
}

<div class="content-wrapper">
    <!-- Content -->

    <div class="container-xxl flex-grow-1 container-p-y">
        <h4 class="fw-bold py-3 mb-4">Genel Ayarlar</h4>
        <div class="row">
            <div class="col-md-12">
                <div class="card mb-4">
                    <div class="card-body">
                        <form method="post" enctype="multipart/form-data">
                           <div class="mb-3">
                                <label class="col-sm-2 col-form-label" asp-for="Id">İletişim Id</label>
                                <div class="col-sm-10">
                                    <input type="text" class="form-control" asp-for="Id" readonly>
                                </div>
                                <span asp-validation-for="Id" class="text-danger"></span>
                            </div>
                            <div class="mb-3">
                                <label asp-for="FooterDescription" class="form-label">Footer Açıklama</label>
                                <textarea class="form-control" asp-for="FooterDescription" rows="1"></textarea>
                            </div>
                            <br />
                            <div class="mb-3">
                                <label for="Light" class="form-label">Logo (Açık Zemin)</label>
                                <div class="d-flex align-items-start align-items-sm-center gap-4">
                                    <img src="@Model.LogoLight" alt="user-avatar" class="d-block rounded" height="100" width="300">
                                    <div class="button-wrapper">
                                        <label for="Light" class="btn btn-primary me-2 mb-4" tabindex="0">
                                            <span class="d-none d-sm-block">Logo Ekle</span>
                                            <i class="bx bx-upload d-block d-sm-none"></i>
                                            <input type="file" id="Light" name="Light" class="account-file-input" hidden="" accept="image/png, image/jpeg">
                                        </label>
                                        <p class="text-muted mb-0">Allowed JPG, GIF or PNG. Max size of 800K</p>
                                    </div>
                                </div>
                            </div>
                            <br />
                            <div class="mb-3">
                                <label for="Dark" class="form-label">Logo (Kapalı Zemin)</label>
                                <div class="d-flex align-items-start align-items-sm-center gap-4">
                                    <img src="@Model.LogoDark" alt="user-avatar" class="d-block rounded" height="100" width="300" >
                                    <div class="button-wrapper">
                                        <label for="Dark" class="btn btn-primary me-2 mb-4" tabindex="0">
                                            <span class="d-none d-sm-block">Logo Ekle</span>
                                            <i class="bx bx-upload d-block d-sm-none"></i>
                                            <input type="file" id="Dark" name="Dark" class="account-file-input" hidden="" accept="image/png, image/jpeg">
                                        </label>
                                        <p class="text-muted mb-0">Allowed JPG, GIF or PNG. Max size of 800K</p>
                                    </div>
                                </div>
                            </div>
                            <br />
                            <div class="mb-3">
                                <label for="Fav" class="form-label">Favicon</label>
                                <div class="d-flex align-items-start align-items-sm-center gap-4">
                                    <img src="@Model.Favicon" alt="user-avatar" class="d-block rounded" height="100" width="100" id="uploadedAvatar">
                                    <div class="button-wrapper">
                                        <label for="Fav" class="btn btn-primary me-2 mb-4" tabindex="0">
                                            <span class="d-none d-sm-block">Icon Ekle</span>
                                            <i class="bx bx-upload d-block d-sm-none"></i>
                                            <input type="file" id="Fav" name="Fav" class="account-file-input" hidden="" accept="image/png, image/jpeg">
                                        </label>
                                        <p class="text-muted mb-0">Allowed JPG, GIF or PNG. Max size of 800K</p>
                                    </div>
                                </div>
                            </div>
                            <br />
                            <div class="mb-3">
                                <button type="submit" class="btn btn-lg btn-primary mt-5 ">Değişikleri Kaydet</button>
                            </div>
                            <div asp-validation-summary="All" class="text-danger"></div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


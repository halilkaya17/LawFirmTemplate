@using LawFirmTemplate.Models
@model HomePage;
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/AdminLayout.cshtml";
}

<div class="content-wrapper">
    <!-- Content -->

    <div class="container-xxl flex-grow-1 container-p-y">
        <h4 class="fw-bold py-3 mb-4">Anasayfa Ayarları</h4>
        <div class="row">
            <div class="col-md-12">
                <form method="post">
                    <div class="card mb-4">
                        <div class="card-body">

                            <h5 class="card-header">Faaliyet Alanlarımız</h5>
                            <label class="col-sm-2 col-form-label" asp-for="Id">Anasayfa Id</label>
                            <div class="col-sm-10">
                                <input type="text" class="form-control" asp-for="Id" readonly>
                            </div>
                            <span asp-validation-for="Id" class="text-danger"></span>
                            <div class="mb-3">
                                <label for="exampleFormControlTextarea1" class="form-label">Başlık</label>
                                <textarea class="form-control" asp-for="PracticeAreasTitle" rows="1"></textarea>
                            </div>
                            <div class="mb-3">
                                <div>
                                    <label for="exampleFormControlTextarea1" class="form-label">Açıklama</label>
                                    <textarea class="form-control" asp-for="PracticeAreasDescpiption" rows="4"></textarea>
                                </div>
                            </div>
                        </div>
                        <div class="card-body">
                            <h5 class="card-header">Ekibimiz</h5>
                            <div class="mb-3">
                                <label for="exampleFormControlTextarea1" class="form-label">Başlık</label>
                                <textarea class="form-control" asp-for="OurTeamsTitle" rows="1"></textarea>
                            </div>
                            <div class="mb-3">
                                <div>
                                    <label for="exampleFormControlTextarea1" class="form-label">Açıklama</label>
                                    <textarea class="form-control" asp-for="OurTeamsDescription" rows="3"></textarea>
                                </div>
                            </div>
                        </div>
                        <div class="card-body">
                            <h5 class="card-header">Makaleler</h5>
                            <div class="mb-3">
                                <label for="exampleFormControlTextarea1" class="form-label">Başlık</label>
                                <textarea class="form-control" asp-for="ArticlesTitle" rows="1"></textarea>
                            </div>
                            <div class="row justify-content-start">
                                <div class="col-sm-10">
                                    <button type="submit" class="btn btn-primary">Kaydet</button>
                                </div>
                            </div>
                        </div>

                    </div>
                </form>
            </div>
            
        </div>
    </div>

</div>

